%h1 Personal Movie Database v2.0
:javascript
  MOVIES = #{@movies};

#control
  %span.right
    %a(href="#" data-sort="movie.name") name
    %a(href="#" data-sort="movie.score") score
    %a(href="#" data-sort="mtime") date
    %span.images
      %img.add(src="images/add.png")  
      %img.loader(src="images/loader.gif")
      %img.rescan(src="images/rescan.png" alt="rescan movies")
  %span.search
    %span.glass
      %span
    %input(type='text')
#add_area
  %div
    %h1 add movies
    %textarea
    %a.add(href="#") add
    %img.loader(src="images/loader.gif")

%script(type = "text/x-mustache")
  .movies
    .header
      %span.dir
        %img(src="images/dir.png")
        %span.count {{count}}
        movies in {{dir}}
    {{#movies}}
    .movie(data-dir="{{dir}}" data-path="{{path}}")
      %span.name
        %a(href = "{{movie.url}}") {{movie.name}}
      %span.year {{movie.year}}
      %span.genre {{movie.genres}}
      %span.score {{movie.score}}
      %span.votes 
        {{movie.votes}}
        .hidden
          %img.remove(src="images/remove.png")
      .details
        .detail
          %span.keyword plot:
          %span {{movie.plot}}
        .detail
          %span.keyword dir:
          %span {{path}}
        .detail
          %span.keyword added:
          %span {{mtime_s}}
    {{/movies}}
